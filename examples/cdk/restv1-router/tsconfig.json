{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "bin/**/*.ts",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "cdk.out"
    ]
}