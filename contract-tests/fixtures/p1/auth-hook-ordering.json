{
  "id": "p1.auth.hook_ordering",
  "tier": "p1",
  "name": "Auth hook runs before handler (middleware ordering)",
  "setup": {
    "routes": [
      {
        "method": "GET",
        "path": "/trace",
        "handler": "echo_middleware_trace",
        "auth_required": true
      }
    ]
  },
  "input": {
    "request": {
      "method": "GET",
      "path": "/trace",
      "query": {},
      "headers": {
        "authorization": ["Bearer test"],
        "origin": ["https://example.com"]
      },
      "body": { "encoding": "utf8", "value": "" },
      "is_base64": false
    }
  },
  "expect": {
    "response": {
      "status": 200,
      "headers": {
        "access-control-allow-origin": ["https://example.com"],
        "content-type": ["application/json; charset=utf-8"],
        "vary": ["origin"],
        "x-request-id": ["req_test_123"]
      },
      "cookies": [],
      "body_json": { "trace": ["request_id", "recovery", "logging", "cors", "auth", "handler"] },
      "is_base64": false
    }
  }
}

