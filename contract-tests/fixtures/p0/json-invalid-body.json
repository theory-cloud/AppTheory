  "name": "Invalid JSON maps to app.bad_request",
  "setup": {
    "routes": [
      { "method": "POST", "path": "/json", "handler": "parse_json_echo" }
    ]
  },
  "input": {
    "request": {
      "method": "POST",
      "path": "/json",
      "query": {},
      "headers": { "content-type": ["application/json"] },
