{
  "id": "m1.sqs.partial_batch_failure",
  "tier": "m1",
  "name": "SQS: route by queue name + partial batch failure",
  "setup": {
    "sqs": [
      { "queue": "queue-a", "handler": "sqs_fail_on_body" },
      { "queue": "queue-b", "handler": "sqs_always_fail" }
    ]
  },
  "input": {
    "aws_event": {
      "source": "sqs",
      "event": {
        "Records": [
          {
            "messageId": "msg-1",
            "receiptHandle": "rh-1",
            "body": "ok",
            "attributes": {},
            "messageAttributes": {},
            "md5OfBody": "",
            "eventSource": "aws:sqs",
            "eventSourceARN": "arn:aws:sqs:us-east-1:000000000000:queue-a",
            "awsRegion": "us-east-1"
          },
          {
            "messageId": "msg-2",
            "receiptHandle": "rh-2",
            "body": "fail",
            "attributes": {},
            "messageAttributes": {},
            "md5OfBody": "",
            "eventSource": "aws:sqs",
            "eventSourceARN": "arn:aws:sqs:us-east-1:000000000000:queue-a",
            "awsRegion": "us-east-1"
          }
        ]
      }
    }
  },
  "expect": {
    "output_json": { "batchItemFailures": [{ "itemIdentifier": "msg-2" }] }
  }
}

